// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@map("users")
}

model Asset {
  id          String   @id @default(cuid())
  key         String   @unique
  title       String?
  contentType String
  size        Int
  url         String
  createdAt   DateTime @default(now())

  @@index([createdAt])
  @@map("assets")
}
